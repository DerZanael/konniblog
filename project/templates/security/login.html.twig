{% extends 'website.html.twig' %}
{% set nologin = true %}

{% block title %}Log in to {{blog_name}}{% endblock %}

{% block body %}
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
        </div>
    {% endif %}

<h1 class="h3 mb-3 font-weight-normal">Please sign in</h1>
{{include("security/login_form.html.twig", {"last_username":last_username})}}
{% endblock %}
